@model MVCBlog.Models.Post
<!--Not the same as using directive, this is C# method for referencing
    Need a reference up here for Blog User model and comments model; for comments and author's names to show up -->


<div class="container text-center">
    <p class="h6 mb-0 text-uppercase text-primary">@Model.Blog.Name</p>
    <h1>@Model.Title</h1>

    <p class="mb-3">@Model.Abstract</p>
    <ul class="list-inline small text-uppercase mb-0">
        <li class="list-inline-item align-middle"><img class="rounded-circle shadow-sm" src="~/img/person-1.jpg" alt="" width="40" /></li>
        <li class="list-inline-item mr-0 text-muted align-middle">By </li>
        <li class="list-inline-item align-middle mr-0"><a class="font-weight-bold reset-anchor" href="#">Josh Scott@*; Or User*@</a></li>
        <li class="list-inline-item text-muted align-middle mr-0">|</li>
        <li class="list-inline-item text-muted align-middle mr-0">@Model.Created.Date.ToString("MMM dd,yyyy H:mm tt") </li>
        <li class="list-inline-item text-muted align-middle mr-0">|</li>
        <li class="list-inline-item text-muted align-middle">@Model.Comments.Count Comments</li>
    </ul>
</div>
<img class="w-100 py-5" src="~/img/post-banner.jpg" alt="">
<div class="container">
    <div class="row">
        @*Start of blog content*@
        <div class="col-lg mb-5 mb-lg-0">
            <p class="lead first-letter-styled line-height-lg">@Html.Raw(Model.Body)</p>           @*@Model.Content*@
            <div class="p-4 bg-light mb-5">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item mr-2 pr-lg-2"><a class="tag reset-anchor" href="#"><i class="fas fa-bookmark text-primary mr-2"></i>Tag1</a></li>
                    <li class="list-inline-item mr-2 pr-lg-2"><a class="tag reset-anchor" href="#"><i class="fas fa-bookmark text-primary mr-2"></i>Tag2</a></li>
                    <li class="list-inline-item mr-2 pr-lg-2"><a class="tag reset-anchor" href="#"><i class="fas fa-bookmark text-primary mr-2"></i>Tag3</a></li>
                </ul>
            </div>
            <div class="container-fluid">
                <div class="row text-center">
                    <div class="col">
                        <p>
                            <a asp-controller="Posts" asp-action="BlogPosts" asp-route-id="@Model.BlogId">Back to @Model.Blog.Name Posts </a> |
                            <a asp-controller="Posts" asp-action="Index">Back to All Posts</a>
                        </p>
                    </div>
                </div>
            </div>
            <h3 class="h4 mb-4">Share this post</h3>
            <ul class="list-inline mb-5">
                <li class="list-inline-item mr-1 mb-3"><a class="social-link-share facebook" href="#"><i class="fab fa-facebook-f mr-2"></i>Share</a></li>
                <li class="list-inline-item mr-1 mb-3"><a class="social-link-share twitter" href="#"><i class="fab fa-twitter mr-2"></i>Tweet</a></li>
                <li class="list-inline-item mr-1 mb-3"><a class="social-link-share instagram" href="#"><i class="fab fa-instagram mr-2"></i>Share</a></li>
            </ul>
            <h3 class="h4 mb-4">Leave a comment</h3>
            @if (User.Identity.IsAuthenticated)
            {
                <form class="mb-5" asp-controller="Comments" asp-action="Create" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <textarea class="form-control" name="Content" rows="5" placeholder="Leave your message"></textarea>
                        </div>
                        <div class="form-group col-lg-12">
                            <button class="btn btn-dark" type="submit">Submit your comment</button>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <a class="btn btn-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>

            }
            <h3 class="h4 mb-4 d-flex align-items-center"><span>Comments</span><span class="text-small ml-3 text-gray">@Model.Comments.Count</span></h3>
            <ul class="list-unstyled comments">
                @foreach (var comment in Model.Comments)
                {
                    <li>
                        <div class="d-flex mb-4">
                            <div class="pr-2 flex-grow-1" style="width: 75px; min-width: 75px;"><img class="rounded-circle shadow-sm img-fluid img-thumbnail" src="~/img/person-1.jpg" alt=""></div>
                            <div class="pl-2">
                                <p class="small mb-0 text-primary">@comment.Created.ToString("dd MMM yyyy")</p>
                                <h5>@comment.BlogUser.FirstName @comment.BlogUser.LastName</h5>
                                <p class="text-muted text-small mb-2">@comment.Body</p><a class="reset-anchor text-small" href="#"><i class="fas fa-share mr-2 text-primary"></i><strong>Reply</strong></a>
                            </div>
                        </div>
                    </li>
                }
                <li>
                    <div class="d-flex mb-4">
                        <div class="pr-2 flex-grow-1" style="width: 75px; min-width: 75px;"><img class="rounded-circle shadow-sm img-fluid img-thumbnail" src="~/img/person-1.jpg" alt=""></div>
                        <div class="pl-2">
                            <p class="small mb-0 text-primary">30 Oct 2019</p>
                            <h5>Mike Johnson</h5>
                            <p class="text-muted text-small mb-2">Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At.</p><a class="reset-anchor text-small" href="#"><i class="fas fa-share mr-2 text-primary"></i><strong>Reply</strong></a>
                        </div>
                    </div>
                </li>

            </ul>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row text-center">
        <div class="col">
            <p>
                <a asp-controller="Posts" asp-action="BlogPosts" asp-route-id="@Model.BlogId">Back to @Model.Blog.Name Posts </a> |
                <a asp-controller="Posts" asp-action="Index">Back to All Posts</a>
            </p>
        </div>
    </div>
</div>


