@model MVCBlog.Models.Post

@{
    ViewData["Title"] = "Details";
    var imageHelper = new MVCBlog.Utilities.ImageHelper();
}

<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading">@Model.Abstract</h2>
                    <span class="meta">
                        Posted by
                        <a href="#">Josh Scott</a>
                        on @Model.Created.ToString("MMMM dd, yyyy")
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<img src="@imageHelper.DecodeImage(Model.Image, Model.FileName)" class="img-fluid" alt="Responsive image">

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.Body)
            </div>
        </div>
    </div>
</article>
@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Comments" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.Hidden("PostId", Model.Id)
                <div class="form-group">
                    <label asp-for="Body" class="control-label"></label>
                    <input name="CommentContent" class="form-control" />
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}

<!-- Sidebar Widgets Column -->
<div class="col-md-4">

    <!-- Search Widget -->
    <div class="card my-4">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
            <form asp-controller="Home" asp-action="Results" method="get">
                <div class="input-group">
                    <input name="SearchString" type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Go!</button>
                    </span>
                </div>
            </form>
        </div>
    </div>

</div>


<div>
    <a class="btn btn-info" asp-controller="Posts" asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

