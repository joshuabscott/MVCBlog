@model IEnumerable<MVCBlog.Models.Post>

@{
    ViewData["Title"] = "BlogPosts";
}


@*<h1>@ViewData["BlogName"]</h1>*@




<!-- Hero section -->
<section class="hero bg-center bg-cover" style="background: url(/img/hero-banner.jpg)">
    <div class="dark-overlay py-5">
        <div class="overlay-content">
            <div class="container py-5 text-white text-center">
                <h1>@ViewData["BlogName"]</h1>
                <p>Number of Posts:  @Model.Count()</p>
            </div>
        </div>
    </div>
</section>
<!-- Blog listing -->
<section class="pt-5">
    <div class="container-fluid">
        <div class="row text-center">
            <div class="col">

                <!--Admin Create Post Link -->
                @if (User.IsInRole("Administrator"))
                {
                    <p>
                        <a asp-action="Create" asp-route-id="@ViewData["BlogId"]">Create New Post</a> |
                    </p>
                }

            </div>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="container pt-5">
            <div class="row mb-5">
                <div class="col-lg-8">
                    <div class="row text-center">
                        <div class="col-lg-6 mb-5">
                            <div class="col">
                                <p>
                                    <a asp-controller="Blogs" asp-action="Index">Back to Blogs</a>
                                </p>
                            </div>

                            <!-- Blog Category 1-->
                            <a href="post.html"><img class="img-fluid mb-4 rounded" src="~/img/listing-tnumbnail-3.jpg" alt="" /></a>
                            <ul class="list-inline small text-uppercase mb-0">
                                <li class="list-inline-item text-gray align-middle"> @Html.DisplayFor(modelItem => item.Created)</li>
                            </ul>
                            <h3 class="h4 mt-2"> <a class="reset-anchor" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a></h3>
                            <p class="text-small mb-1">@Html.DisplayFor(modelItem => item.Abstract)</p>
                            <!--<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link">Continue reading</a>-->
                            <!--Admin/Moderator Create/Delete Buttons-->
                            @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                            {
                                <p>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </p>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

