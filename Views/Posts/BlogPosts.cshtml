@model IEnumerable<MVCBlog.Models.Post>

@{
    ViewData["Title"] = "BlogPosts";
    var imageHelper = new MVCBlog.Utilities.ImageHelper();
}

<h1>The Blog: @ViewData["BlogName"]</h1>
<p>Number of Posts: @ViewData["Count"]</p>

<p>
    <a class="btn btn-primary" asp-controller="Posts" asp-action="Create" asp-route-id="@ViewData["BlogId"]">Create New</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abstract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog)
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Abstract)
                </td>
                <td>
                    @Html.Raw(item.Body)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@imageHelper.DecodeImage(item.Image, item.FileName)" alt="Not Available" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Blog.Id)
                </td>
                <td>
                    @*<a  class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a  class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                     @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    @*{
                        <a class="btn btn-primary" asp-action="AssignUsers" asp-route-id="@item.Id">Assign</a>
                    }*@
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <a class="btn btn-danger text-light" data-target="#deleteModal-@item.Id" data-toggle="modal">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-info" asp-controller="Blogs" asp-action="Index">Back to List</a>
</div>