@model IEnumerable<MVCBlog.Models.Post>

@{
    ViewData["Title"] = "BlogPosts";
    var imageHelper = new MVCBlog.Utilities.ImageHelper();
}

<h1>The Blog: @ViewData["BlogName"]</h1>
<p>Number of Posts: @ViewData["Count"]</p>

<h1> The Blog: @ViewData["BlogName"] has @Model.Count() Posts</h1>  @*//10/22/2020*@

<p>
    <a class="btn btn-primary" asp-controller="Posts" asp-action="Create" asp-route-id="@ViewData["BlogId"]">Create New</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abstract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog)
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Abstract)
                </td>
                <td>
                    @Html.Raw(item.Body)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@imageHelper.DecodeImage(item.Image, item.FileName)" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Blog.Id)
                </td>
                <td>
                    @*<a  class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a  class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                        @*{
                <a class="btn btn-primary" asp-action="AssignUsers" asp-route-id="@item.Id">Assign</a>
            }*@
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <a class="btn btn-danger text-light" data-target="#deleteModal-@item.Id" data-toggle="modal">Delete</a>
                    }

                    @*Delete Modal*@
                    <div class="modal" id="deleteModal-@item.Id">
                        <div class="modal modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header text-center bg-dark">
                                    <h4 class="modal-title text-light">Delete Project</h4>
                                    <button type="button" class="btn bg-dark text-light" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col">
                                                <p>Are you sure you want to delete this project?</p>
                                                <form class="form-group" asp-action="Delete" asp-route-id="@item.Id">

                                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-info" asp-controller="Blogs" asp-action="Index">Back to List</a>
</div>