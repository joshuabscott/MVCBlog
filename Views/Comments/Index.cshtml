@model IEnumerable<MVCBlog.Models.Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Comments</h1>

@if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New Comment</a>
    </p>
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUser.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUser.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUser)
            </th>*@
        <th>Settings</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogUser.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.Post.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogUser.Id)
            </td>*@
        <td>

            @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
            {
                <a class="btn btn-primary" asp-action="AssignUsers" asp-route-id="@item.Id">Assign</a>
            }
            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
            @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
            {
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            }
            @if (User.IsInRole("Administrator"))
            {
                <a class="btn btn-danger text-light" data-target="#deleteModal-@item.Id" data-toggle="modal">Delete</a>
            }
        </td>
        </tr>
}
    </tbody>
</table>
