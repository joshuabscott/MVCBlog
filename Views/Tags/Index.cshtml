@model IEnumerable<MVCBlog.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

<h1>Tags</h1>

@if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New Tag</a>
    </p>
}

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Post.Id)
                </td>
                <td>

                    @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    {
                        <a class="btn btn-primary" asp-action="AssignUsers" asp-route-id="@item.Id">Assign</a>
                    }
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <a class="btn btn-danger text-light" data-target="#deleteModal-@item.Id" data-toggle="modal">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
